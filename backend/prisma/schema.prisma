generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  role     Role   @default(USER)

  bets     Bet[]
  payments Payment[]

  createdAt DateTime @default(now())
}

enum Role {
  USER
  ADMIN
}

model Championship {
  id        String   @id @default(uuid())
  name      String // Ex: Brasileir√£o 2026, Premier League 2026
  country   String // Brasil, Inglaterra
  startDate DateTime
  endDate   DateTime

  rounds   Round[]
  payments Payment[]

  createdAt DateTime @default(now())
}

model Round {
  id     String @id @default(uuid())
  number Int // Rodada 1, 2, 3...

  championship   Championship @relation(fields: [championshipId], references: [id])
  championshipId String

  games Game[]
  bets  Bet[]

  createdAt DateTime @default(now())

  @@unique([number, championshipId])
}

model Game {
  id       String @id @default(uuid())
  homeTeam String
  awayTeam String

  homeScore Int? // Resultado final (admin preenche)
  awayScore Int?

  startTime DateTime

  round   Round  @relation(fields: [roundId], references: [id])
  roundId String

  guesses Guess[]

  createdAt DateTime @default(now())
}

model Bet {
  id String @id @default(uuid())

  user   User   @relation(fields: [userId], references: [id])
  userId String

  round   Round  @relation(fields: [roundId], references: [id])
  roundId String

  guesses Guess[]

  totalPts Int     @default(0)
  paid     Boolean @default(false)

  createdAt DateTime @default(now())

  @@unique([userId, roundId])
}

model Guess {
  id String @id @default(uuid())

  bet   Bet    @relation(fields: [betId], references: [id])
  betId String

  game   Game   @relation(fields: [gameId], references: [id])
  gameId String

  homeScore Int
  awayScore Int

  points Int @default(0)

  createdAt DateTime @default(now())

  @@unique([betId, gameId])
}

model Payment {
  id String @id @default(uuid())

  user   User   @relation(fields: [userId], references: [id])
  userId String

  championship   Championship @relation(fields: [championshipId], references: [id])
  championshipId String

  amount Float
  status PaymentStatus @default(PENDING)
  method PaymentMethod

  proofUrl   String? // Se for comprovante
  externalId String? // ID do PIX (Mercado Pago, etc)

  createdAt DateTime @default(now())
}

enum PaymentStatus {
  PENDING
  APPROVED
  REJECTED
}

enum PaymentMethod {
  PIX
  PROOF
}
